
do {
    var N = parseInt(prompt("Qual o número que deseja elevar ao quadrado? "));
    if(N <= 0){
console.log ("Número inválido. Tente novamente!");

}else{
var calculo = 0
for( i = 0 ; i<N ; i++){
    calculo += ((2*i) +1)
    
}
 console.log("O resultado é " + (calculo))
}

var op = prompt("Deseja repetir o programa? (Sim | Não) ").toUpperCase();

}while (op === "SIM");
